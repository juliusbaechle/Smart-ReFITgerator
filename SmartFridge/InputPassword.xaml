<Window x:Class="SmartFridge.InputPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="290" Width="800">
    
    <StackPanel Orientation="Vertical" Background="{StaticResource Brush_BackgroundLight}">
        <Label Content="Gebe das Service Passwort ein" Foreground="Black" Margin="20" FontSize="40" HorizontalAlignment="Center"/>
        <PasswordBox Name="txtPassword" Background="{StaticResource Brush_Background}" Height="50" Margin="20" PasswordChar="*" Foreground="White" FontSize="40" HorizontalContentAlignment="Center"/>
        <Button Click="OnClick" Height="50" Width="200" Margin="0, 0, 0, 20" Content="OK" FontSize="30"/>
    </StackPanel>
</Window>
